<%= form_for(Comment.new, url: create_comment_path) do |f| %>
    <%= hidden_field_tag :page_name, page_name %>
    <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
  