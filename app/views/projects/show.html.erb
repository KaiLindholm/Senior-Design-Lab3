<div class="flex justify-center items-center flex-col text-center align-center">    
    <div class="bg-white p-4 shadow-md">
        <h1 class="font-bold mt-4 underline"> <%= @project.name %> </h1>
        <hr>
        <h3 class="px-64 my-4 text-left py-5"><%= @projectHightlights[0] %></h3>
        <h4 class="px-64 my-4 text-left"><%= @projectHightlights[1] %></h4>
        <div class="flex items-center justify-center m-0 ">
            <%= image_tag @images[1], class: "w-1/2 h-auto shadow-lg rounded-md" %>
        </div>        
        <h4 class="px-64 my-4 text-left"> <%= @projectHightlights[2] %></h4>
        <div class="flex items-center justify-center m-0">
            <%= image_tag @images[0], class: "w-1/2 h-auto shadow-md rounded-md" %>
        </div>    
        <%= link_to "View on Github", @project.repo, target: "_blank", class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded m-4" %>    
    </div>
</div>

<div class="flex flex-wrap w-1/4 items-center justify-center p-4 max-w-md mx-auto space-y-4 mt-8 max-h-80 overflow-y-auto" id="comments">
    <%= render @comments %>
</div>

<%= render 'comments/form', page_name: @project.name %>