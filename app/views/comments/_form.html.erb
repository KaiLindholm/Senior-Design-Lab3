<div class="max-w-md mx-auto">
    <%= form_for Comment.new, id: "new_comment", url: create_comment_path, remote: true do |f| %>
        <%= f.hidden_field :page, value: page_name %>
        <div class="flex flex-grow items-center mx-w-md mx-auto mt-4 ">
            <%= f.label 'Leave a Comment', class: 'flex block text-2xl font-semibold' %>
            <%= f.text_area :content, class: 'w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-400', id: "comment_box"%>
        </div>
        <div class="flex mx-w-md mx-auto mt-4" hidden id="form_error_box">
            <div class="flex items-center bg-red-500 text-white text-center text-md font-bold px-4 py-3" role="alert">
                <p id="form_error_message", class="text-center"> Error Message </p>
            </div>
        </div>
        <div class="flex mx-w-md mx-auto mt-4">
            <%= f.submit 'Post Comment', class: 'px-4 py-2 m-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600' %>
        </div>
    <% end %>
</div>  